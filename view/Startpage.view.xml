<mvc:View controllerName="main.controller.Startpage" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m"
	xmlns:layout="sap.ui.layout" xmlns:microchart="sap.suite.ui.microchart">
	<l:Splitter width="100%" height="100%" orientation="Vertical">
		<l:Splitter>
			<l:layoutData>
				<l:SplitterLayoutData size="50px" resizable="false"/>
			</l:layoutData>
			<l:contentAreas>
				<Bar id="mainBar">
					<contentLeft>
						<Image id="mainlogo" src="src/logo.png" class="sapUiSmallMargin sapUiSmallMarginBottom sapUiSmallMarginTop"/>
					</contentLeft>
					<contentMiddle>
						<SearchField width="600px" placeholder="Поиск сотрудников" id="searchfield" search="onSearchPressed"/>
					</contentMiddle>
				</Bar>
			</l:contentAreas>
		</l:Splitter>
		<l:Splitter height="100%">
			<layout:VerticalLayout class="sapUiResponsiveMargin">
				<Title titleStyle="H2" text="Избранное" class="sapUiTinyMarginBegin"/>
				<layout:HorizontalLayout allowWrapping="true">
					<GenericTile id="tileEmployees" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Справочник сотрудников Самараэнерго"
						press="onPressEmployees" frameType="TwoByOne">
						<TileContent>
							<ImageContent src="images/employee_directory.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" backgroundImage="images/eos_background.png" header="CЭД"
						url="http://eos-wsp-nlb/_layouts/15/eos/myworkspaceredirect.aspx" press="onPressSED">
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Сервис Деск" backgroundImage="images/sap_background.png" press="onPressSD">
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="САБиЗ" backgroundImage="images/sabiz_background.png"
						url="http://openicar-prod.samaraenergo.ru:8080/docflowm/sf/emb/newMainWindow" press="onPressSabiz">
					</GenericTile>
					<GenericTile id="tileSeSite" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" backgroundImage="src/se_website.png"
						url="http://www.samaraenergo.ru/" press="onPressSiteSE"></GenericTile>
				</layout:HorizontalLayout>
				<Title titleStyle="H2" text="Инфоблок" class="sapUiTinyMarginBegin sapUiMediumMarginTop"/>
				<layout:HorizontalLayout allowWrapping="true">
					<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" tiles="{/News}">
						<GenericTile backgroundImage="{DATA_RAW}" state="null" frameType="TwoByOne" press="onPressNews">
							<tileContent>
								<TileContent footer="{ path: 'UPDATED_DATE', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', source: { pattern: 'dd.MM.yyyy' } } }">
									<content>
										<NewsContent contentText="{TEXT}" subheader="{HEADER}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</SlideTile>
					<GenericTile id="tileLK" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Личный кабинет" press="press">
						<TileContent footer="Посещений в день">
							<NumericContent value="6" withMargin="false" valueColor="Error" indicator="Down"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="ЮЗЭДО" subheader="Документооборот" press="press">
						<TileContent unit="Документов">
							<NumericContent value="{/uzedoDocNumber}" valueColor="Good" indicator="Up" withMargin="false"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Количество бытовых потребителей" press="press">
						<TileContent unit="Данные на сегодня">
							<NumericContent value="{/indConsNumber}" valueColor="Critical" indicator="Up" withMargin="false"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Количество юридических лиц" press="press">
						<TileContent unit="Данные на сегодня">
							<NumericContent value="{/legalConsNumber}" valueColor="Good" indicator="Up" withMargin="false"/>
						</TileContent>
					</GenericTile>											
				</layout:HorizontalLayout>
				<layout:HorizontalLayout allowWrapping="true">
					<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" tiles="{/News}">
						<GenericTile backgroundImage="{image}" state="{state}" frameType="TwoByOne" press="onPressNews">
							<tileContent>
								<TileContent footer="{ path: 'date', formatter: '.formatJSONDate' }">
									<content>
										<NewsContent contentText="{content}" subheader="{subheader}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</SlideTile>
					<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" tiles="{/News}">
						<GenericTile backgroundImage="{image}" state="{state}" frameType="TwoByOne" press="onPressNews">
							<tileContent>
								<TileContent footer="{ path: 'news>date', formatter: '.formatJSONDate' }">
									<content>
										<NewsContent contentText="{content}" subheader="{subheader}"></NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</SlideTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Статистика портала" press="">
						<TileContent>
							<ImageContent src="images/analytics.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Погода в Самаре" press="press">
						<TileContent unit="{/weatherText}">
							<NumericContent scale="°C" value="{/Temperature}" withMargin="false"/>
						</TileContent>
					</GenericTile>																			
				</layout:HorizontalLayout>
				<Title titleStyle="H2" text="Приложения" class="sapUiTinyMarginBegin sapUiMediumMarginTop"/>
				<layout:HorizontalLayout allowWrapping="true">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" backgroundImage="images/ituniverse_background.png" header="3S" url="http://192.168.127.9:8080/" press="onPress3S">
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="ГИС ЖКХ" url="https://dom.gosuslugi.ru/" press="onPressZKH">
						<TileContent>
							<ImageContent src="images/gis_zkh.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Меню столовой" press="onPressMenu">
						<TileContent>
							<ImageContent src="images/menu.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="ИАС" backgroundImage="images/sap_background.png" url="http://sap-srv-03:8080/BOE/BI" press="onPressIAS">
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" backgroundImage="images/sap_background.png" header="АСУ СЭРП"
						url="http://ciepr.samaraenergo.ru:8002/sap/bc/gui/sap/its/webgui" press="onPressASUSERP">
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Анкетирование" press="onPressQuiz">
						<TileContent>
							<ImageContent src="images/testing.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Библиотека знаний" url="http://prt.samaraenergo.ru:50000/com.sap.portal.resourcerepository/repo/fioriApplications/kb/index.html" press="onPressKB">
						<TileContent>
							<ImageContent src="images/kw.png"/>
						</TileContent>
					</GenericTile>
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Редактор инфоблока" press="onPressNewsAdmin">
						<TileContent>
							<ImageContent src="images/nwa.png"/>
						</TileContent>
					</GenericTile>					
					<!-- <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Панель управления" url="http://prt.samaraenergo.ru:50000/nwa" press="onPressNWA">
						<TileContent>
							<ImageContent src="images/nwa.png"/>
						</TileContent>
					</GenericTile>										 -->
				</layout:HorizontalLayout>
			</layout:VerticalLayout>
		</l:Splitter>
	</l:Splitter>
</mvc:View>
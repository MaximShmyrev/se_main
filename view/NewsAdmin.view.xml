<mvc:View
	controllerName="main.controller.NewsAdmin"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<l:ResponsiveSplitter defaultPane="default">
		<l:PaneContainer>
			<l:SplitPane requiredParentWidth="400" id="default">
				<l:layoutData>
					<l:SplitterLayoutData resizable="true" size="30%"/>
				</l:layoutData>					
				<Panel headerText="Элементы инфоблока" height="100%">
					<Bar id="headerBar">
						<contentMiddle>
							<SearchField
								id="searchField"
								showRefreshButton="{= !${device>/support/touch} }"
								refreshButtonTooltip="ещё один поиск"
								tooltip="поиск"
								width="100%"
								search="onSearch"/>
						</contentMiddle>
					</Bar>
					<List id="listNews" items="{ path: '/' }">
						<ObjectListItem title="{HEADER}" type="Active" icon="sap-icon://newspaper" press="handleListNewsItemPressed">
							<ObjectAttribute visible="true" text="Тип элемента: {TYPE}"/>
						</ObjectListItem>
					</List>					
				</Panel>		
			</l:SplitPane>
			<l:PaneContainer orientation="Vertical">
				<l:SplitPane requiredParentWidth="600">
					<Page title="Детали элемента">					
						<footer>
							<OverflowToolbar id="otb3">
								<!-- <ToolbarSpacer /> -->
								<Button text="Добавить" type="Transparent" />
								<Button text="Удалить" type="Transparent" />
								<Button text="Редактировать" type="Transparent" />
							</OverflowToolbar>
						</footer>
					</Page>								
				</l:SplitPane>
			</l:PaneContainer>
		</l:PaneContainer>
	</l:ResponsiveSplitter>
</mvc:View>





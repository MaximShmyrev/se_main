<mvc:View
	controllerName="main.controller.NewsAdmin"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<l:ResponsiveSplitter defaultPane="default">
		<l:PaneContainer>
			<l:SplitPane requiredParentWidth="400" id="default">
				<l:layoutData>
					<l:SplitterLayoutData resizable="true" size="30%"/>
				</l:layoutData>					
				<Panel headerText="Элементы инфоблока" height="100%">
					<Bar id="headerBar">
						<contentLeft>
							<Button type="Back" visible="{appView>/smallScreenMode}" press=".onBack"/>
						</contentLeft>						
						<contentMiddle>
							<SearchField
								id="searchField"
								showRefreshButton="{= !${device>/support/touch} }"
								refreshButtonTooltip="ещё один поиск"
								tooltip="поиск"
								width="100%"
								search="onSearch"/>
						</contentMiddle>
					</Bar>
					<List id="listNews" items="{ path: '/' }">
						<ObjectListItem title="{HEADER}" type="Active" icon="sap-icon://newspaper" press="handleListNewsItemPressed">
							<ObjectAttribute visible="true" text="Тип элемента: {TYPE}"/>
						</ObjectListItem>
					</List>					
				</Panel>		
			</l:SplitPane>
			<l:PaneContainer orientation="Vertical">
				<l:SplitPane requiredParentWidth="600">
					<Page id="newDetails" title="Детали элемента">
						<content>
							<ObjectHeader
								title="Заголовок новости">
								<attributes>
									<ObjectAttribute title="Дата публикации" text="21.05.2021" />
									<ObjectAttribute title="Автор" text="Пушкин А.С." />
								</attributes>
								<statuses>
									<ObjectStatus title="Статус" text="Опубликована" state="Success" />
								</statuses>
							</ObjectHeader>
						</content>
						<content>
							<List id="" headerText="" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="true" updateStarted="onUpdateStarted"
								showNoData="false">				
								<items>
									<CustomListItem class="sapUiTinyMargin" visible="{= ${/image} === 'true' ? true : false }" >
										<Image src="{/fragment_image}" visible="true" height="400px" fieldGroupIds="detailLink" class="fragmentImage" selected="false"/>
									</CustomListItem>
									<CustomListItem class="sapUiTinyMargin">
										<Text text="{/fragment_text}" class="fragmentText"/>
									</CustomListItem>
								</items>
							</List>
						</content>										
						<!-- <List id="" headerText="" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="true" updateStarted="onUpdateStarted"
						showNoData="false">
						<headerToolbar>
							<Toolbar>
								<Text text="Дата публикации {/updated_date}"/>

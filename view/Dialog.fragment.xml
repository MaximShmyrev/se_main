<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="Dialog" title="{/fragment_header}" contentWidth="1050px" contentHeight="900px">
		<content>
			<List id="" headerText="" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="true" updateStarted="onUpdateStarted"
				showNoData="false">
				<headerToolbar>
					<Toolbar>
						<Text text="Дата публикации {/updated_date}"/>
						<ToolbarSpacer/>
					</Toolbar>				
				</headerToolbar>						
				<items>
					<CustomListItem class="sapUiTinyMargin" visible="{= ${/image} === 'true' ? true : false }">
						<Image src="{/fragment_image}" visible="true" width="100%" fieldGroupIds="detailLink"/>
					</CustomListItem>
					<CustomListItem class="sapUiTinyMargin">
						<Text text="{/fragment_text}" class="fragmentText"/>
					</CustomListItem>
				</items>
			</List>
		</content>
		<beginButton>
			<Button text="Закрыть" press=".onCloseDialog"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
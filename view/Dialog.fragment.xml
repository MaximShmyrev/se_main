<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="Dialog" title="{/fragment_header}" contentWidth="850px" contentHeight="900px">
		<content>
			<List id="" headerText="" width="auto" growing="true" growingThreshold="10" growingScrollToLoad="true" updateStarted="onUpdateStarted"
				showNoData="false">
				<headerToolbar>
					<Toolbar>
						<Text text="Дата публикации {/updated_date}" id='update_date'/>
						<ToolbarSpacer/>
					</Toolbar>				
				</headerToolbar>						
				<items>
					<CustomListItem class="sapUiTinyMargin" visible="{= ${/image} === 'true' ? true : false }" >
						<Image src="{/fragment_image}" visible="true" height="400px" fieldGroupIds="detailLink" class="fragmentImage" />
					</CustomListItem>
					<CustomListItem class="sapUiTinyMargin">
						<Text text="{/fragment_text}" class="fragmentText"/>
					</CustomListItem>
				</items>
			</List>
		</content>
		<content>
			<core:HTML id="attachmentFrame"/>			  
		</content>
		<beginButton>
			<Button text="Закрыть" press=".onCloseDialog"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
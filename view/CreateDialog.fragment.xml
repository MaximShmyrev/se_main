<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog id="Dialog" title="Добавление элемента в Инфоблоке" contentWidth="850px" contentHeight="900px">
		<VBox class="sapUiSmallMargin">
			<f:Form id="FormAddNews"
				editable="true">
				<f:title>
					<core:Title text="Детали элемента" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Заголовок">
								<f:fields>
									<Input value="{SupplierName}" id="Name"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Тип элемента">
								<f:fields>
									<Select id="elementType" selectedKey="{Country}">
										<items>
											<core:Item text="Новости" key="England"/>
											<core:Item text="Объявления" key="Germany"/>
											<core:Item text="Приказы" key="USA"/>
										</items>
									</Select>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</VBox>
		<beginButton>
			<Button text="Сохранить" press=".onCloseDialog"/>			
		</beginButton>
		<endButton>
			<Button text="Отменить" press=".onCloseDialog"/>			
		</endButton>				


	</Dialog>
</core:FragmentDefinition>
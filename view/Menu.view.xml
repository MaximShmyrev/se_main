				</navigationBar>				
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:Link
					text="Сегодня: { path: '/date/date', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'yyyy.MM.dd' } } }"/>
			</layout:VerticalLayout>
		</headerContent>

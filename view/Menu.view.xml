	xmlns:core="sap.ui.core" controllerName="main.controller.Menu" height="100%">

	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" useIconTabBar="true" showTitleInHeaderContent="true">
		<headerTitle>
			<ObjectPageHeader id="headerForTest" objectTitle="Меню столовой ПАО &quot;Самараэнерго&quot;" wrapping="true" objectImageShape="Circle"

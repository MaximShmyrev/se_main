	<ObjectPageLayout id="ObjectPageLayout" headerContentPinnable="false" enableLazyLoading="false" useIconTabBar="false" preserveHeaderStateOnScroll="false" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<heading>
					<m:Image src="src/logo.png" class="sapUiSmallMargin sapUiSmallMarginBottom sapUiSmallMarginTop"/>
				</heading>			
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">			
			<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
				<m:Button class="sapMBtnBase sapMBtn sapMBarChild" icon="sap-icon://nav-back" press="onPressHome" tooltip="На главную страницу"/>
			</layout:VerticalLayout>
			<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
				<m:Label class="size1" text="Меню столовой ПАО &quot;Самараэнерго&quot;"/>
				<m:Link	text="Сегодня: { path: '/date/date', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'yyyy.MM.dd' } } }"/>
			</layout:VerticalLayout>
			<!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
				<m:Image src="src/logo.png" class="sapUiSmallMargin sapUiSmallMarginBottom sapUiSmallMarginTop"/>
			</layout:VerticalLayout>				 -->
			</m:FlexBox>
		</headerContent>

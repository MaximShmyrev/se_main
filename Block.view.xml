<mvc:View controllerName="main.Block" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt" xmlns:form="sap.ui.layout.form">
	<tnt:ToolHeader>
		<Button icon="sap-icon://home" type="Transparent" press=".onHomePress">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow"/>
			</layoutData>
		</Button>
		<IconTabHeader id="iconTabHeader" selectedKey="invalidKey" select=".onSelectTab" backgroundDesign="Transparent" mode="Inline">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" shrinkable="true"/>
			</layoutData>
			<items>
				<IconTabFilter text="Главная"/>
				<IconTabFilter text="Инфоблок"/>
				<IconTabFilter text="Сервисы"/>
				<IconTabFilter text="Обратная связь"/>
			</items>
		</IconTabHeader>
		<Button icon="sap-icon://search" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow"/>
			</layoutData>
		</Button>
		<Button icon="sap-icon://comment" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow"/>
			</layoutData>
		</Button>
		<MenuButton icon="sap-icon://hint" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow"/>
			</layoutData>
			<Menu>
				<MenuItem text="Edit" icon="sap-icon://edit"/>
				<MenuItem text="Save" icon="sap-icon://save"/>
			</Menu>
		</MenuButton>
	</tnt:ToolHeader>
	<Panel>
		<Label id="labelId" text="Главная страница"/>
	</Panel>
	<l:VerticalLayout id="containerLayout" width="100%">
		<l:BlockLayout id="BlockLayout">
			<l:BlockLayoutRow accentCells="Accent1">

<mvc:View
        xmlns="sap.m"
        xmlns:form="sap.ui.layout.form"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        core:require="{
            formatMessage: 'sap/base/strings/formatMessage'
        }"
        controllerName="sap.ushell_abap.transport.controller.TransportInformation">

    <MessageStrip
            id="transportNotAllowedMessage"
            visible="{= !${TransportInformation>/transportAllowed}}"
            text="{i18n>Message.TransportNotAllowed}"
            showIcon="true"
            class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd"
            showCloseButton="false">
    </MessageStrip>

    <MessageStrip
            id="assignedToTransportMessage"
            visible="{= ${TransportInformation>/assignedToTransport}}"
            text="{
                parts: ['i18n>Message.AssignedToTransport', 'TransportInformation>/objectType'],
                formatter: 'formatMessage'
            }"
            showIcon="true"
            class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd"
            showCloseButton="false">
    </MessageStrip>

    <form:SimpleForm editable="true" validateFieldGroup=".onValidation">
        <Label text="{i18n>Label.Transport}"/>
        <Input id="transportInput"
               class="sapUiSmallMarginBottom"
               maxLength="60"
               textFormatMode="ValueKey"
               required="{TransportInformation>/required}"
               visible="{TransportInformation>/transportAllowed}"
               change=".onTransportChange"
               valueStateText="{i18n>Message.EmptyTransport}"
               valueState="{TransportInformation>/valueState}"
               value="{TransportInformation>/value}"
               startSuggestion="0"
               filterSuggests="false"
               showSuggestion="true"
               showTableSuggestionValueHelp="false"
               suggestionItemSelected=".onTransportChange"
               suggestionRows="{TransportInformation>/transports}"
               fieldGroupIds="transportGroup">
            <suggestionColumns>
                <Column width="40%">
                    <Label text="{i18n>Column.ID}"/>
                </Column>
                <Column width="60%">
                    <Label text="{i18n>Column.Description}"/>
                </Column>
            </suggestionColumns>
            <suggestionRows>
                <ColumnListItem>
                    <cells>
                        <Label text="{TransportInformation>id}"/>
                        <Label text="{TransportInformation>description}"/>
                    </cells>
                </ColumnListItem>
            </suggestionRows>
        </Input>
    </form:SimpleForm>
</mvc:View>
